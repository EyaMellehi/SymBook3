{% extends 'base.html.twig' %}

{% block title %}Liste des Utilisateurs
{% endblock %}

{% block body %}
	<h1>Liste des Utilisateurs</h1>.
	<table class="table">
		<tr>
			<th>Username</th>
			<th>Email</th>
			<th>Adresse</th>
			<th>Action</th>
		</tr>
		{% for user in users %}
			<tr>
				<td>{{user.username}}</td>
				<td>{{user.email}}</td>
				<td>{{user.adresse}}</td>
				<td>
					<a href="{{url('admin_users_delete',{'id':user.id})}}" class="btn btn-primary btn-sm">Supprimer</a>
				</td>
			</tr>
		{% endfor %}
	</table>

{% endblock %}
