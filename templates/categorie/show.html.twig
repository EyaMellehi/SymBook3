{% extends 'base.html.twig' %}

{% block title %}Liste des Catégories
{% endblock %}

{% block body %}
	<h1>Détail d'une categorie
		</h1>
	<div class="book-container">
    <div class="book-details">
		<H4>Titre:
			{{categorie.libelle|capitalize}}
		<H4>Description:
			</H4>
			<p>({{categorie.descritption }})</p>

		
<parent>
    </div>
</div>

<style>
.book-container {
  display: flex;
  flex-direction: row;
  margin-bottom: 2rem;
}

.book-cover {
  flex: 0 0 200px;
  margin-right: 2rem;
}

.book-cover img {
  width: 100%;
  height: auto;
  object-fit: cover; /* Ensures image fills container */
}

.book-details {
  flex: 1;
}

.book-details h3 {
  margin-bottom: 1rem;
}

.book-details a {
  text-decoration: none;
}

.price,
.publisher {
  margin-bottom: 0.5rem;
  font-weight: bold;
}

.description {
  margin-bottom: 1rem;
}
</style>
{% endblock %}