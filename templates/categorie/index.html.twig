{% extends 'base.html.twig' %}

{% block title %}Hello CategorieController!
{% endblock %}

{% block body %}
	<h1>Liste des Catégories</h1>
		
	<div class="d-flex justify-content-end">
		<a href="{{url('admin_categorie_create')}}" class="btn btn-success">Ajouter une nouvelle categorie</a>
	</div>
	<br>
	<table class="table">
		<tr>
			<th>ID Catégorie</th>
			<th>Nom Catégorie</th>
			<th>Slug Catégorie</th>
			<th colspan="3">Action</th>
		</tr>
		{% for cat in categories %}
			<tr>
				<td>{{cat.id}}</td>
				<td>{{cat.libelle}}</td>
				<td>{{cat.slug}}</td>
				<td>
					<a href="{{url('admin_categorie_show',{'id':cat.id})}}" class="btn btn-success btn-sm">Voir plus</a>
				</td>
				<td>
					<a href="{{url('admin_categorie_delete',{'id':cat.id})}}" class="btn btn-danger btn-sm">Supprimer</a>
				</td>
				<td>
					<a href="{{url('admin_categorie_update',{'id':cat.id})}}" class="btn btn-primary btn-sm">Edit</a>
				</td>
			</tr>
		{% endfor %}
	</table>
{% endblock %}
