{% extends 'base.html.twig' %}

{% block title %}Panier
{% endblock %}

{% block body %}
	<h1>Panier</h1>.
	
	<table class="table">
		<thead>
		<tr>
			<th>Produit</th>
			<th>Prix</th>
			<th>Quantite</th>
			<th>Total</th>
			<th colspane='3'>Actions</th>
		</tr>
		</thead>
		<tbody>
			{% for ele in data %}
				<tr>
					<td>{{ele.livre.titre}}</td>
					<td>{{ele.livre.prix}} DT</td>
					<td>{{ele.quantite}}</td>
					<td>{{ele.quantite * ele.livre.prix}} DT</td>
					<td>
					<a href="{{ path('User_livres_commande', {'id': ele.livre.id}) }}" class="btn btn-success">+</a>
					<a href="{{ path('User_livres_remove', {'id': ele.livre.id}) }}" class="btn btn-warning">-</a>
					<a href="{{ path('User_livres_delete', {'id': ele.livre.id}) }}" class="btn btn-danger">Supprimer</a>
					</td>
				</tr>
				{% else %}
				<tr>
					<td colspan="5">
						<p>Votre panier est vide</p>
					</td>
				</tr>
			{% endfor %}
		</tbody>
		<tfoot>
			<tr>
				<td colspan='3'>Total</td>
				<td>{{total}} Dt</td>
				<td>
					<a href="{{path('User_empty')}}" class="btn btn-danger">Vider</a>
				</td>
			</tr>
		</tfoot>
	</table>
{% endblock %}
