{% extends 'base.html.twig' %}

{% block title %}Liste des livres
{% endblock %}

{% block body %}
	<h1>Liste des livres</h1>.
	
	<table class="table">
		<tr>
			<th>Titre</th>
			<th>ISBN</th>
			<th>Editeur</th>
			<th>Date Edition</th>
			<th>Prix</th>
			<th>Cat√©gorie</th>
			<th>Action</th>
		</tr>

		{% for livre in livres %}
			<tr>
				<td>{{livre.titre|capitalize}}</td>
				<td>{{livre.ISBN}}</td>
				<td>{{livre.editeur}}</td>
				<td>{{livre.editedAt|date('d-m-Y')}}</td>
				<td>{{livre.prix}}</td>
				<td>{{livre.categorie.libelle}}</td>
				<td>
					<a href="{{url('User_livres_show',{'id':livre.id})}}" class="btn btn-success btn-sm">Voir plus</a>
				</td>
				
			</tr>
		{% endfor %}
	</table>

{% endblock %}
