{% extends 'base.html.twig' %}

{% block title %}Liste des livres
{% endblock %}

{% block body %}
	<h1>DÃ©tail du livre
		{{livre.ISBN}}</h1>
	<div class="book-container">
	<div class="book-cover">
		<img src="{{livre.image}}" alt="photo du livre">
		</div>
    <div class="book-details">
		<H4>Titre:
			{{livre.titre|capitalize}}
			{{livre.prix}}(DT)</H4>
		<H4>Editeur :
			{{livre.editeur}}
			({{livre.editedAt|date('d-m-Y')}})</H4>

		<p>{{livre.resume}}</p>
<parent>
        <a href="{{url('User_livres_commande',{'id':livre.id})}}" class="btn btn-primary">Buy Now</a>
    </div>
</div>

<style>
.book-container {
  display: flex;
  flex-direction: row;
  margin-bottom: 2rem;
}

.book-cover {
  flex: 0 0 200px;
  margin-right: 2rem;
}

.book-cover img {
  width: 100%;
  height: auto;
  object-fit: cover; /* Ensures image fills container */
}

.book-details {
  flex: 1;
}

.book-details h3 {
  margin-bottom: 1rem;
}

.book-details a {
  text-decoration: none;
}

.price,
.publisher {
  margin-bottom: 0.5rem;
  font-weight: bold;
}

.description {
  margin-bottom: 1rem;
}
</style>
{% endblock %}