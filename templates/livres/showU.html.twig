{% extends 'base.html.twig' %}

{% block title %}Détail du livre{{ livre.titre }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-5">Détail du livre {{ livre.titre }}</h1>
        <div class="row mt-4">
            <div class="col-md-4">
                <img src="{{ livre.image }}" alt="photo du livre" class="img-fluid">
            </div>
            <div class="col-md-8">
                <h3>{{ livre.titre|capitalize }}</h3>
                <p><strong>ISBN:</strong> {{ livre.ISBN }}</p>
                <p><strong>Editeur:</strong> {{ livre.editeur }}</p>
                <p><strong>Date Edition:</strong> {{ livre.editedAt|date('d-m-Y') }}</p>
                <p><strong>Prix:</strong> {{ livre.prix }} (DT)</p>
                <p><strong>Résumé:</strong></p>
                <p>{{ livre.resume }}</p>
                <a href="{{ path('User_livres_commande', {'id': livre.id}) }}" class="btn btn-primary">Acheter</a>
            </div>
        </div>
    </div>
{% endblock %}
