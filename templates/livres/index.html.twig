{% extends 'base.html.twig' %}

{% block title %}Liste des livres
{% endblock %}

{% block body %}
	<h1>Liste des livres</h1>.
	<div class="d-flex justify-content-end">
		<a href="{{url('admin_livres_add')}}" class="btn btn-success">Ajouter un nouveau livre</a>
	</div>
	<table class="table">
		<tr>
			<th>Titre</th>
			<th>ISBN</th>
			<th>Editeur</th>
			<th>Date Edition</th>
			<th>Prix</th>
			<th>Cat√©gorie</th>
			<th colspan="3">Action</th>
		</tr>

		{% for livre in livres %}
			<tr>
				<td>{{livre.titre|capitalize}}</td>
				<td>{{livre.ISBN}}</td>
				<td>{{livre.editeur}}</td>
				<td>{{livre.editedAt|date('d-m-Y')}}</td>
				<td>{{livre.prix}}</td>
				<td>{{livre.categorie.libelle}}</td>
				<td>
					<a href="{{url('admin_livres_show',{'id':livre.id})}}" class="btn btn-success btn-sm">Voir plus</a>
				</td>
				<td>
					<a href="{{url('admin_livres_delete',{'id':livre.id})}}" class="btn btn-danger btn-sm">Supprimer</a>
				</td>
				<td>
					<a href="{{url('admin_livre_update',{'id':livre.id})}}" class="btn btn-primary btn-sm">Edit</a>
				</td>
			</tr>
		{% endfor %}
	</table>

{% endblock %}
